                            <snmp_community>public</snmp_community>
                            <snmp_oid>HIKVISION-MIB::hikDiskStatus.{#HIKDINDEX}.0</snmp_oid>
                            <key>hikDiskStatus[{#HIKDINDEX}]</key>
